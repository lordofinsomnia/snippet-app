<%= form_for @snippet, :html => {:multipart => true} do |f| %>
	<%= f.label :filename %>			
	<%= f.text_field :filename, :size => "40"%>			
	<%= f.label :content %>
	<%= f.text_area :content, :size => "30x10" %>	  
	<%= label_tag :file, 'upload a snippet' %>
	<%= file_field_tag :file %>
	<%= f.submit %>

	<p>
	Comments:
	<% @snippet.comments.each do |comment| %>
		<p>
	    <%= comment.label :commenter %><br>
	    <%= comment.text_field :commenter %>
	  </p>
	  <p>
	    <%= comment.label :body %><br>
	    <%= comment.text_area :body %>
	  </p>
	  <p>
	<% end %>
	</p>

		
		
<% end %>	