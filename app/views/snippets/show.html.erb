<h2>Snippet details</h2>
<%= render 'snippet' %>
<p>
	<% @snippet.comments.each do |comment| %>
		<p>
			<%= comment.commenter %> @ <%= comment.created_at %>
		  </p>
			"<%= comment.body %>"			
	  </p>	  
	<% end %>
</p>

<% if user_signed_in? %>
	<%= form_for [@snippet, @snippet.comments.build] do |comment2| %>		
		<p><%= comment2.label :body, 'New comment' %></p>
		<p><%= comment2.text_area :body, :size => "30x10" %></p>
		<p><%= comment2.submit 'Add comment'  %></p>
	<% end %>		
<% end %>