<h2>Snippet details</h2>
<%= form_for @snippet, :html => {:multipart => true} do |f| %>
	<%= f.label :filename %>			
	<%= f.text_field :filename, :size => "40"%>			
	<%= f.label :content %>
	<%= f.text_area :content, :size => "30x10" %>	  
	<%= label_tag :file, 'upload a snippet' %>
	<%= file_field_tag :file %>
	<%= f.submit %>				

	<%= form_for [@snippet, @snippet.comments.build] do |comment| %>		
		<%= comment.label :body, 'Comment' %>
		<%= comment.text_area :body, :size => "30x10" %>	
		<%= comment.submit %>	  
	<% end %>		


<% end %>	



