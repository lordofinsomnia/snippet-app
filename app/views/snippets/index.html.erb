<h1>Snippets</h1>

<table>
	<%= form_for Snippet.new do |snippet| %>		
		<tr>
			<th>
				<%= snippet.label :filename %>	
			</th>
			<th>
				<%= snippet.text_field :filename, :size => "40"%>	
			</th>
		</tr>	

		<tr>
			<th>
				<%= snippet.label :content %>
			</th>
			<th>
				<%= snippet.text_area :content, :size => "30x10" %>
			</th>		
		</tr>

		<tr>
			<th>
				<%= snippet.submit %>
			</th>
		</tr>	
	<% end %>
</table>

<table>
  <tr>
    <th>Id</th>
    <th>Filename</th>
    <th>Content</th>
    <th>Output</th>
  </tr>
  <% for snippet in @snippets %>
		<tr>
			<td><%= snippet.id %></td>
			<td><%= snippet.filename %></td>
			<td><%= snippet.content %></td>
			<td><%= snippet.output %></td>
		</tr>
	<% end %>
</table>

